<h1>Forum</h1>
<% if user_signed_in? %>
    <%= link_to 'Add new Topic', new_forum_path, class: "btn  btn-success" %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title:</th>
      <th>Author:</th>
      <th>Question:</th>
      <th>Published date:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.title %></td>
        <td><%= forum.author %></td>
        <td><%= truncate(forum.content, length: 200, :escape => false)%></td>
        <td><%= forum.published_date %></td>
        <td><%= link_to 'Show', forum %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>

</table>

<br>


