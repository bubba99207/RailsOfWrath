<p id="notice"><%= notice %></p>

<figure>
  <%= image_tag @product.image %>
</figure>

<p>
  <strong>
    <%= @product.name %>
  </strong>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description.html_safe %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price) %>
</p>

<p>
  <strong>Weight:</strong>
  <%= number_with_precision(@product.weight, precision: 2) %>
</p>


<% if is_admin? %>
    <%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>

<%= link_to 'Back', products_path %>

<div id="comment">
  <% @product.reviews.each do |review| %>
      <p>
        <%= review.author %>
      </p>
      <p>
        <%= review.comment %>
      </p>
      <%= (image_tag( 'star.jpg', height: '15', width: '15') * review.rating).html_safe %> <br />
      <% if current_user.try(:admin?) %>
          <%= link_to 'Remove', product_review_path(@product, review), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <hr>
  <% end %>
  <%= form_for([@product, @product.reviews.build]) do |f| %>
      <%= f.hidden_field :product_id %>
      <div class="field">
        <%= f.label :author %><br>
        <%= f.text_field :author %>
      </div>
      <div class="field">
        <%= f.label :comment %><br>
        <%= f.text_area :comment %>
      </div>
      <div class="field">
        <%= f.label :rating %><br>
        <%= f.select :rating, options_for_select(1..5) %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
</div>
