<h1>Recipes</h1>

<% if user_signed_in? %>
    <%= link_to 'Post New Recipe', new_recipe_path, class: "btn  btn-success" %>
<% end %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Serving size</th>
    <th>Directions</th>
    <th>Picture</th>
    <th>Ingredients</th>
    <th>Category</th>
    <th>Cook time</th>
    <th>Prepare time</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.user_id %></td>
        <td><%= recipe.title %></td>
        <td><%= recipe.serving_size %></td>
        <td><%= recipe.directions %></td>
        <td><%= image_tag recipe.picture %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.category %></td>
        <td><%= recipe.cook_time %></td>
        <td><%= recipe.prepare_time %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>



