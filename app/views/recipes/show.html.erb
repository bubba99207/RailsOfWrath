<p id="notice"><%= notice %></p>

<h2 class="text-center">
  <%= @recipe.title %>
</h2>
<% @recipes.each do |recipe| %>
    <% @username = User.find(recipe.user_id).username %>
<% end %>

<p class="text-center">
  <strong>Recipe by:</strong><%= @username %>
</p>
<p class="text-center">
  <strong>Prepare time:</strong><%= @recipe.prepare_time %> minutes
  <strong>Cook time:</strong><%= @recipe.cook_time %> minutes
</p>

<p class="text-center">
  <strong>Category:</strong><%= @recipe.category %>
</p>

<div class="row">
  <div class="col-md-12">
    <%= image_tag @recipe.picture, class: "img-responsive img-rounded center" %>
  </div>
</div>


<p>
  <strong>Ingredients:</strong>
  <%= @recipe.ingredients %>
</p>







<p>
  <strong>Serving size:</strong>
  <%= @recipe.serving_size %>
</p>

<p>
  <strong>Directions:</strong>
  <%= @recipe.directions %>
</p>






<% if user_signed_in? %>

<%= link_to 'Edit', edit_recipe_path(@recipe) %><% end %>
<%= link_to 'Back', recipes_path %>
